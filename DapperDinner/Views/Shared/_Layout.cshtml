<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta content="Nerd, Dinner, Geek, Luncheon, Dweeb, Breakfast, Technology, Bar, Beer, Wonk"
        name="keywords" />
    <meta name="description" content="Host and promote your own Nerd Dinner free!" />
    <link title="NerdDinner.com" rel="search" type="application/opensearchdescription+xml" href="@Url.Content("~/Services/OpenSearch.ashx")" />
    <link href="@Url.Content("~/Content/Production.css?v=2")" rel="stylesheet" type="text/css" media="screen" />
   
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.11/themes/humanity/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.6.2.min.js" type="text/javascript"></script> 
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.15/jquery-ui.min.js" type="text/javascript"></script> 
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/4.0/1/MicrosoftAjax.js" type="text/javascript"></script> 
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/MicrosoftMvcAjax.js" type="text/javascript"></script> 

    <script type="text/javascript">
       if (typeof jQuery == 'undefined') {
           document.write(unescape("%3Clink href='/Content/themes/base/jquery.ui.all.css' rel='stylesheet' type='text/css'%3E"));
           document.write(unescape("%3Cscript src='/Scripts/jquery-1.6.2.min.js' type='text/javascript'%3E%3C/script%3E"));
           document.write(unescape("%3Cscript src='/Scripts/jquery-ui-1.8.15.min.js' type='text/javascript'%3E%3C/script%3E"));
           document.write(unescape("%3Cscript src='/Scripts/jquery.unobtrusive-ajax.min.js' type='text/javascript'%3E%3C/script%3E"));
           document.write(unescape("%3Cscript src='/Scripts/MicrosoftAjax.js' type='text/javascript'%3E%3C/script%3E"));
           document.write(unescape("%3Cscript src='/Scripts/MicrosoftMvcAjax.js' type='text/javascript'%3E%3C/script%3E"));
       }
   </script>

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/yepnope.1.0.1-min.js")" type="text/javascript"></script>    
    <script src="@Url.Content("~/Scripts/date.format.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/NerdDinner.js?v=6")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/timepicker_plug/TimePickerAddOn.js")" type="text/javascript"></script>
    <script src="http://www.google-analytics.com/ga.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Scripts/timepicker_plug/css/TimePickerAddOn.css")"/>
    <link rel="alternate" type="application/rss+xml" title="NerdDinner.com - Upcoming Dinners" href="@Url.Content("~/Services/RSS")" />
    <link rel="odata.service" title="NerdDinner.com OData Service" href="@Url.Content("~/Services/OData.svc")" />
    <link rel="odata.feed" title="NerdDinner.com OData Service - Dinners" href="@Url.Content("~/Services/OData.svc/Dinners")" />
    @RenderSection("HeadArea", required: false)

    @MvcMiniProfiler.MiniProfiler.RenderIncludes()

</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    <a href="@Url.Content("~/")" title="Nerd Dinner" class="logo"></a>
                </h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LoginStatus")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Find Dinner", "Index", "Home")</li>
                    <li>@Html.ActionLink("Host Dinner", "Create", "Dinners")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My Dinners", "My", "Dinners")</li>
                    }
                    <li class="last">@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                <a class="feed" href="@Url.Content("~/Services/OData.svc")">
                    <img alt="OData Feed" title="OData Feed" src="@Url.Content("~/Content/Img/icon-odatafeed-28x28.png")" /></a>
                <a class="feed" href="@Url.Content("~/Services/RSS")">
                    <img alt="RSS Feed" title="RSS Feed" src="@Url.Content("~/Content/Img/icon-feed-28x28.png")" /></a>
                <a class="feed" href="@Url.Action("iCalFeed", "Services", null, "webcal") ">
                    <img alt="iCal Calendar Feed for Nerd Dinners" title="iCal Calendar Feed for Nerd Dinners" src="@Url.Content("~/Content/Img/icon-icalfeed-28x28.png")" /></a>
            </nav>
        </header>
        @RenderSection("Masthead", required: false)
        <div id="main" class="clearfix">
            @RenderBody()
        </div>
        <footer>
            Code by <a href="http://www.hanselman.com">Hanselman</a>, <a href="http://weblogs.asp.net/scottgu">
                Guthrie</a>, <a href="http://weblogs.asp.net/jgalloway">Galloway</a>, <a href="http://mourfield.com">
                    Mourfield</a>,<a href="http://www.johnvpetersen.com"> Petersen</a>  and <a href="http://blog.nerdbank.net/">Arnott</a>. JavaScript
            by <a href="http://encosia.com">Dave Ward</a>. ASP.NET MVC by <a href="http://www.haacked.com">
                Haack</a> and friends. Style by <a href="http://michaeldorian.com/">Michael Dorian Bach</a>.<br />
            Source Code at <a href="http://nerddinner.codeplex.com">http://nerddinner.codeplex.com</a>.
            Free Sample Book Chapter and code walkthrough at <a href="http://tinyurl.com/aspnetmvc">
                http://tinyurl.com/aspnetmvc</a>. <br />
                Version: @HttpContext.Current.Application["Version"]
        </footer>
</body>
</html>
